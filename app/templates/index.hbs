<!-- contais all the information in the index page including the bikes and their details-->
<div id="bryPage">
  <div class="col-md-9" id="bryBikerows">
    <ul>
      {{#each model as |bike|}}
        <div id="bryBike">

          <div class="col-md-6" id="bryImage">
            <img src="{{bike.bikePhoto2}}" alt="{{bike.name}}" width='250px' height='200px'>
          </div>

          <div class="col-md-6" id="bryDetails">
            <h4 id="bry-bike-name">{{bike.name}}</h4>
            <br>
            <p id="bry-bike-details">{{bike.description}}</p>
             {{#link-to 'bike' bike.id}}<button type="button" class="btn btn-danger">More</button>{{/link-to}}
              <hr>
          </div>

        </div>

      {{/each}}
    </ul>
  </div>
